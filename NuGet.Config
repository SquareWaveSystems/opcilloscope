<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    <!-- Local package source for offline development (optional - create ./packages directory) -->
    <!-- Uncomment the line below if you have a ./packages directory with .nupkg files -->
    <!-- <add key="local" value="./packages" /> -->
  </packageSources>
  <config>
    <!-- Disable signature verification to avoid CRL/OCSP network calls during restore -->
    <add key="signatureValidationMode" value="accept" />
  </config>
</configuration>
